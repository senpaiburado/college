					<div class="bar3"></div>
				</div>
			</div>
			<div class="hide-head ">
				<div id="q mySidenav" class="tabcontent tabcontent-text ">

					<ul id="main-nav-mob">
						<% for (var i = 0; i < topMenu.length; i++) { %>
						<li>
							<div class="mydropdown ">
